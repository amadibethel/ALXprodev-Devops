#!/bin/bash

# Output CSV file
report_file="pokemon_report.csv"

# CSV header
echo "Name,Height (m),Weight (kg)" > "$report_file"

# Variables to calculate averages
total_height=0
total_weight=0
count=0

# Loop through all JSON files
for file in pokemon_data/*.json; do
    # Extract data using jq
    name=$(jq -r '.name' "$file" | awk '{print toupper(substr($0,1,1)) substr($0,2)}')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")
    
    # Convert height/weight to meters/kilograms if necessary
    # (PokÃ©API gives height in decimeters and weight in hectograms)
    height_m=$(awk "BEGIN {printf \"%.1f\", $height/10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight/10}")
    
    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$report_file"
    
    # Add to totals
    total_height=$(awk "BEGIN {print $total_height + $height_m}")
    total_weight=$(awk "BEGIN {print $total_weight + $weight_kg}")
    count=$((count + 1))
done

# Calculate averages
avg_height=$(awk "BEGIN {printf \"%.2f\", $total_height / $count}")
avg_weight=$(awk "BEGIN {printf \"%.2f\", $total_weight / $count}")

# Display results
echo "CSV Report generated at: $report_file"
cat "$report_file"
echo ""
echo "Average Height: $avg_height m"
echo "Average Weight: $avg_weight kg"
