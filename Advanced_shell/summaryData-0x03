#!/bin/bash

# Directory containing Pokémon JSON files
DATA_DIR="pokemon_data"
CSV_FILE="pokemon_report.csv"

mkdir -p "$DATA_DIR"

# Initialize CSV file
echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

# Loop through each Pokémon JSON file
for file in "$DATA_DIR"/*.json; do
    # Skip if no files found
    [ -e "$file" ] || continue

    # Extract name, height, weight using jq
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')  # Capitalize first letter
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert height to meters and weight to kg
    height_m=$(echo "scale=1; $height/10" | bc)
    weight_kg=$(echo "scale=1; $weight/10" | bc)

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$CSV_FILE"
done

# Calculate averages using awk
avg_height=$(awk -F',' 'NR>1 {sum+=$2; count++} END {if(count>0) printf "%.2f", sum/count; else print "0.00"}' "$CSV_FILE")
avg_weight=$(awk -F',' 'NR>1 {sum+=$3; count++} END {if(count>0) printf "%.2f", sum/count; else print "0.00"}' "$CSV_FILE")

# Output report
echo -e "\nCSV Report generated at: $CSV_FILE"
cat "$CSV_FILE"
echo -e "\nAverage Height: $avg_height m"
echo "Average Weight: $avg_weight kg"
